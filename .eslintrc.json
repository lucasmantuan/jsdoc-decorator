{
    "env": {
        "browser": false,
        "commonjs": true,
        "es6": true,
        "mocha": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": { "jsx": true },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "constructor-super": "warn",
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "valid-typeof": "warn"
    }
}
